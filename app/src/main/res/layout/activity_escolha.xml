<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fontFamily="@font/montserrat"
    android:orientation="vertical"
    tools:context=".InicioActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#00BFFF"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_menu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:baselineAligned="false"
            android:src="@drawable/menu" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/montserrat"
            android:layout_gravity="center"
            android:text="Veículo"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#00BFFF"
        android:orientation="horizontal">

        <SearchView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:background="#FFFFFF"
            />

        <EditText
            android:id="@+id/txn_pesquisar"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:autofillHints="Pesquisar"
            android:background="#FFFFFF"
            android:fontFamily="@font/montserrat"
            android:hint="Pesquisar"
            android:minHeight="48dp"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/img_microphone"
            android:layout_width="30dp"
            android:layout_height="48dp"
            android:background="#FFFFFF"
            android:src="@drawable/microphone" />

    </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Escolha um veículo para o transporte:"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RGroup">

    <RadioButton
        android:id="@+id/médio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="60dp"
        android:fontFamily="@font/montserrat"
        android:text="Utilitário tipo médio"
        />

    <RadioButton
        android:id="@+id/carga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:fontFamily="@font/montserrat"
        android:text="Utilitário tipo carga"
        />

    <RadioButton
        android:id="@+id/bau_tipo1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:fontFamily="@font/montserrat"
        android:text="Caminhão baú tipo 1"
        />

    <RadioButton
        android:id="@+id/bau_tipo2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:fontFamily="@font/montserrat"
        android:text="Caminhão baú tipo 2"
        />

    <RadioButton
        android:id="@+id/bau_tipo3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:fontFamily="@font/montserrat"
        android:text="Caminhão baú tipo 3"
        />

    <RadioButton
        android:id="@+id/eixos3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:fontFamily="@font/montserrat"
        android:text="Caminhão tipo 3 eixos"
        />

    </RadioGroup>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pronto"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/montserrat"
        android:id="@+id/btnPronto"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Como escolher meu veículo?"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat"
        />

</LinearLayout>
